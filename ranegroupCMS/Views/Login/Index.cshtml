@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signin</title>
    @Styles.Render("~/Content/assets/css/bootstrap.min.css")
    @Styles.Render("~/Content/assets/css/icons.css")
    @Styles.Render("~/Content/assets/css/style.css")
</head>
<body>

    <div class="content-center pt-5">
        <div class="content-desc-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-8">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="text-center mt-0 m-b-15">
                                    <a href="index.html" class="logo logo-admin">
                                        <img src="~/Content/assets/images/ranelogo.png" height="100" alt="logo"></a>
                                </h3>
                                <h4 class="text-muted text-center font-18"><b>Sign In</b></h4>
                                <div class="p-2">
                                    <form class="form-horizontal m-t-5" action="#">
                                        <div class="form-group">
                                            <label>E-Mail</label>
                                            <div>
                                                <input type="email" class="form-control" required
                                                    parsley-type="email" placeholder="Enter a valid e-mail" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-12">
                                                <input class="form-control" type="password" required="" placeholder="Password">
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-12">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                    <label class="custom-control-label" for="customCheck1">Remember me</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group text-center row m-t-10">
                                            <div class="col-12">
                                                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Log In</button>
                                            </div>
                                        </div>

                                        <div class="form-group m-t-10 mb-0 row">
                                            <div class="col-sm-7 m-t-5">
                                                <a href="pages-recoverpw.html" class="text-muted"><i class="mdi mdi-lock"></i>Forgot your password?</a>
                                            </div>
                                            <div class="col-sm-5 m-t-5">
                                                <a href="pages-register.html" class="text-muted"><i class="mdi mdi-account-circle"></i>Create an account</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end row -->
            </div>
        </div>
    </div>

</body>
@Scripts.Render("~/Content/assets/js/jquery.min.js")
@Scripts.Render("~/Content/assets/plugins/parsleyjs/parsley.min.js")
<script>
    $(document).ready(function () {
        $('form').parsley();
    });
</script>
</html>
